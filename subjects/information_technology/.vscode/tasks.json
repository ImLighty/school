{
  "tasks": [
    {
      "type": "cppbuild",
      "label": "C/C++: compile active file using g++",
      "command": "/usr/bin/g++",
      "args": [
        "-fdiagnostics-color=always",
        "-g",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.out"
      ],
      "options": {
        "cwd": "${fileDirname}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Generated by C/C++ extension"
    }
  ],
  "version": "2.0.0"
}